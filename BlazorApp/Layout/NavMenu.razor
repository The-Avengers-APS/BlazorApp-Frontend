@using BlazorBootstrap

<div class="offcanvas-container">
    <Offcanvas @ref="offcanvas" Title="User Menu" Placement="Placement.End">
        <BodyTemplate>
            <nav class="nav flex-column">
                <NavLink class="nav-link" href="/profile">
                    <Icon Name="IconName.PersonFill" /> Profile
                </NavLink>
                <NavLink class="nav-link" href="/settings">
                    <Icon Name="IconName.GearFill" /> Settings
                </NavLink>
                <NavLink class="nav-link" href="/logout">
                    <Icon Name="IconName.BoxArrowRight" /> Log out
                </NavLink>
            </nav>
        </BodyTemplate>
    </Offcanvas>
</div>

<nav class="navbar navbar-light bg-light shadow-sm">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <span class="navbar-brand mb-0 h1">FitLife</span>
        <Button Color="ButtonColor.Link" Class="btn btn-outline-secondary" @onclick="ShowOffcanvasAsync">
            <Icon Name="IconName.PersonCircle" Size="IconSize.x5" />
        </Button>
    </div>
</nav>

<nav class="navbar fixed-bottom bg-white border-top shadow-sm">
    <div class="container-fluid d-flex justify-content-around">
        <NavLink class="nav-item nav-link text-center" href="/" Match="NavLinkMatch.All">
            <div>
                <Icon Name="IconName.HouseFill" Size="IconSize.x4" />
            </div>
            <small>Hjem</small>
        </NavLink>
        <NavLink class="nav-item nav-link text-center" href="/trainingpage">
            <div>
                <Icon Name="IconName.Activity" Size="IconSize.x4" />
            </div>
            <small>Træning</small>
        </NavLink>
        <NavLink class="nav-item nav-link text-center" href="/exercisespage">
            <div>
                <Icon Name="IconName.ListCheck" Size="IconSize.x4" />
            </div>
            <small>Øvelser</small>
        </NavLink>
        <NavLink class="nav-item nav-link text-center" href="/bookingpage">
            <div>
                <Icon Name="IconName.PeopleFill" Size="IconSize.x4" />
            </div>
            <small>Hold</small>
        </NavLink>
        <NavLink class="nav-item nav-link text-center" href="/progresspage">
            <div>
                <Icon Name="IconName.GraphUpArrow" Size="IconSize.x4" />
            </div>
            <small>Progress</small>
        </NavLink>
    </div>
</nav>

@code {
    private Offcanvas offcanvas = default!;

    private async Task ShowOffcanvasAsync()
    {
        await offcanvas.ShowAsync();
    }
}
