<Card Class="mb-3">
    <CardBody>
        <h5 class="card-title mb-3">@Title</h5>
        <div class="d-flex gap-2 flex-wrap">
            <Badge Color="BadgeColor.Primary">
                <Icon Name="IconName.PersonArmsUp" Size="IconSize.x4" /> @MuscleGroup
            </Badge>
            <Badge Color="BadgeColor.Info">
                <Icon Name="IconName.Tools" Size="IconSize.x4" /> @Equipment
            </Badge>
            <Badge Color="@GetDifficultyBadgeColor()">
                <Icon Name="IconName.BarChart" Size="IconSize.x4" /> @Difficulty
            </Badge>
        </div>
    </CardBody>
</Card>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string MuscleGroup { get; set; } = string.Empty;

    [Parameter]
    public string Equipment { get; set; } = string.Empty;

    [Parameter]
    public string Difficulty { get; set; } = string.Empty;

    private BadgeColor GetDifficultyBadgeColor()
    {
        return Difficulty switch
        {
            "Begynder" => BadgeColor.Success,
            "Mellem" => BadgeColor.Warning,
            "Avanceret" => BadgeColor.Danger,
            _ => BadgeColor.Secondary
        };
    }
}
