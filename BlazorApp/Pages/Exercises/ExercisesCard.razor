<Card Class="mb-3">
    <CardBody>
        <h5 class="card-title mb-3">@Exercise.Name</h5>
        <div class="d-flex gap-2 flex-wrap">
            @if (!string.IsNullOrEmpty(Exercise.MuscleGroup))
            {
                <Badge Color="BadgeColor.Primary">
                    <Icon Name="IconName.PersonArmsUp" Size="IconSize.x4" /> @Exercise.MuscleGroup
                </Badge>
            }
            @if (Exercise.Equipment?.Any() == true)
            {
                <Badge Color="BadgeColor.Info">
                    <Icon Name="IconName.Tools" Size="IconSize.x4" /> @string.Join(", ", Exercise.Equipment)
                </Badge>
            }
            <Badge Color="BadgeColor.Secondary">
                <Icon Name="IconName.ListOl" Size="IconSize.x4" /> @Exercise.DefaultSets x @(Exercise.DefaultReps ?? "10")
            </Badge>
        </div>
    </CardBody>
</Card>

@code {
    [Parameter]
    public required ExerciseDto Exercise { get; set; }
}
