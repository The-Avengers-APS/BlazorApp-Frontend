<div class="trackers-container mb-4">
    <div class="row g-3">
        <div class="col-12">
            <Card>
                <CardBody Class="text-center">
                    <h1 class="display-4 mb-1">@WorkoutsThisWeek</h1>
                    <h5 class="text-muted">Træninger denne uge</h5>
                </CardBody>
            </Card>
        </div>
        <div class="col-@(CurrentWeight.HasValue ? "4" : "6")">
            <Card>
                <CardBody Class="text-center">
                    <h2 class="mb-1">@TotalWorkouts</h2>
                    <small class="text-muted">Total træninger</small>
                </CardBody>
            </Card>
        </div>
        <div class="col-@(CurrentWeight.HasValue ? "4" : "6")">
            <Card>
                <CardBody Class="text-center">
                    <h2 class="mb-1">@CurrentStreak</h2>
                    <small class="text-muted">Nuværende streak</small>
                </CardBody>
            </Card>
        </div>
        @if (CurrentWeight.HasValue)
        {
            <div class="col-4">
                <Card>
                    <CardBody Class="text-center">
                        <h2 class="mb-1">@CurrentWeight.Value.ToString("F1")</h2>
                        <small class="text-muted">kg</small>
                    </CardBody>
                </Card>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public int WorkoutsThisWeek { get; set; }

    [Parameter]
    public int TotalWorkouts { get; set; }

    [Parameter]
    public int CurrentStreak { get; set; }

    [Parameter]
    public decimal? CurrentWeight { get; set; }
}
