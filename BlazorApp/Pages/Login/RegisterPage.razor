@page "/register"
@using BlazorApp.Services.Auth
@using Shared.Contracts.DTOs
@inject NavigationManager Navigation
@inject IAuthService AuthService

<PageTitle>FitLife - Opret konto</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Opret konto</h2>

        <EditForm Model="@_model" OnValidSubmit="HandleRegister">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label for="email" class="form-label">Email *</label>
                <InputText id="email" @bind-Value="_model.Email"
                           class="form-control" placeholder="din@email.dk" />
                <ValidationMessage For="@(() => _model.Email)" class="text-danger" />
            </div>

            <div class="row">
                <div class="col-6 mb-3">
                    <label for="givenName" class="form-label">Fornavn</label>
                    <InputText id="givenName" @bind-Value="_model.GivenName"
                               class="form-control" placeholder="Fornavn" />
                </div>
                <div class="col-6 mb-3">
                    <label for="familyName" class="form-label">Efternavn</label>
                    <InputText id="familyName" @bind-Value="_model.FamilyName"
                               class="form-control" placeholder="Efternavn" />
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Adgangskode *</label>
                <InputText id="password" type="password" @bind-Value="_model.Password"
                           class="form-control" placeholder="Min. 8 tegn" />
                <ValidationMessage For="@(() => _model.Password)" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Bekr√¶ft adgangskode *</label>
                <InputText id="confirmPassword" type="password" @bind-Value="_confirmPassword"
                           class="form-control" placeholder="Gentag adgangskode" />
                @if (_passwordMismatch)
                {
                    <span class="text-danger">Adgangskoderne matcher ikke</span>
                }
            </div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger">@_errorMessage</div>
            }

            <button type="submit" class="btn btn-primary w-100" disabled="@_isLoading">
                @if (_isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Opretter konto...</span>
                }
                else
                {
                    <span>Opret konto</span>
                }
            </button>
        </EditForm>

        <div class="auth-links mt-3 text-center">
            <p>Har du allerede en konto? <a href="/login">Log ind</a></p>
        </div>
    </div>
</div>

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 1rem;
        overflow: hidden;
        background-image: url('/background-images/login-background.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .auth-card {
        background: rgba(255, 255, 255, 0.95);
        padding: 1.5rem;
        border-radius: 1rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 340px;
        backdrop-filter: blur(10px);
    }

    .auth-title {
        text-align: center;
        margin-bottom: 1rem;
        color: #333;
        font-size: 1.5rem;
    }

    .auth-links a {
        color: #667eea;
        text-decoration: none;
    }

    .auth-links a:hover {
        text-decoration: underline;
    }

    .auth-links p {
        margin-bottom: 0;
        font-size: 0.9rem;
    }

    .mb-3 {
        margin-bottom: 0.75rem !important;
    }
</style>

@code {
    private RegisterFormModel _model = new();
    private string? _confirmPassword;
    private string? _errorMessage;
    private bool _isLoading;
    private bool _passwordMismatch;

    private async Task HandleRegister()
    {
        _passwordMismatch = _model.Password != _confirmPassword;
        if (_passwordMismatch)
        {
            return;
        }

        _isLoading = true;
        _errorMessage = null;

        try
        {
            // Convert form model to DTO
            var request = new RegisterUserRequest(
                _model.Email!,
                _model.Password!,
                _model.GivenName,
                _model.FamilyName,
                _model.Telephone
            );

            var result = await AuthService.RegisterAsync(request);

            if (result.Success)
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                _errorMessage = result.ErrorMessage ?? "Registrering mislykkedes";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"En fejl opstod: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    // Form model for binding (records are immutable, so we need a class)
    private class RegisterFormModel
    {
        public string? Email { get; set; }
        public string? Password { get; set; }
        public string? GivenName { get; set; }
        public string? FamilyName { get; set; }
        public string? Telephone { get; set; }
    }
}
