@page "/register"
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>FitLife - Opret konto</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Opret konto</h2>

        <EditForm Model="@_user" OnValidSubmit="HandleRegister">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label for="email" class="form-label">Email *</label>
                <InputText id="email" @bind-Value="_user.Email"
                           class="form-control" placeholder="din@email.dk" />
                <ValidationMessage For="@(() => _user.Email)" class="text-danger" />
            </div>

            <div class="row">
                <div class="col-6 mb-3">
                    <label for="givenName" class="form-label">Fornavn</label>
                    <InputText id="givenName" @bind-Value="_user.GivenName"
                               class="form-control" placeholder="Fornavn" />
                </div>
                <div class="col-6 mb-3">
                    <label for="familyName" class="form-label">Efternavn</label>
                    <InputText id="familyName" @bind-Value="_user.FamilyName"
                               class="form-control" placeholder="Efternavn" />
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Adgangskode *</label>
                <InputText id="password" type="password" @bind-Value="_user.Password"
                           class="form-control" placeholder="Min. 8 tegn" />
                <ValidationMessage For="@(() => _user.Password)" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Bekr√¶ft adgangskode *</label>
                <InputText id="confirmPassword" type="password" @bind-Value="_confirmPassword"
                           class="form-control" placeholder="Gentag adgangskode" />
                @if (_passwordMismatch)
                {
                    <span class="text-danger">Adgangskoderne matcher ikke</span>
                }
            </div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger">@_errorMessage</div>
            }

            <button type="submit" class="btn btn-primary w-100" disabled="@_isLoading">
                @if (_isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Opretter konto...</span>
                }
                else
                {
                    <span>Opret konto</span>
                }
            </button>
        </EditForm>

        <div class="auth-links mt-3 text-center">
            <p>Har du allerede en konto? <a href="/login">Log ind</a></p>
        </div>
    </div>
</div>

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .auth-card {
        background: white;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 450px;
    }

    .auth-title {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #333;
    }

    .auth-links a {
        color: #667eea;
        text-decoration: none;
    }

    .auth-links a:hover {
        text-decoration: underline;
    }
</style>

@code {
    private User _user = new();
    private string? _confirmPassword;
    private string? _errorMessage;
    private bool _isLoading;
    private bool _passwordMismatch;

    private async Task HandleRegister()
    {
        _passwordMismatch = _user.Password != _confirmPassword;
        if (_passwordMismatch)
        {
            return;
        }

        _isLoading = true;
        _errorMessage = null;

        try
        {
            var result = await AuthService.RegisterAsync(_user);

            if (result.Success)
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                _errorMessage = result.ErrorMessage ?? "Registrering mislykkedes";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"En fejl opstod: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }
}
