@page "/login"
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>FitLife - Log ind</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Log ind</h2>

        <EditForm Model="@_loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <InputText id="email" @bind-Value="_loginModel.Email"
                           class="form-control" placeholder="Indtast email" />
                <ValidationMessage For="@(() => _loginModel.Email)" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Adgangskode</label>
                <InputText id="password" type="password" @bind-Value="_loginModel.Password"
                           class="form-control" placeholder="Indtast adgangskode" />
                <ValidationMessage For="@(() => _loginModel.Password)" class="text-danger" />
            </div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger">@_errorMessage</div>
            }

            <button type="submit" class="btn btn-primary w-100" disabled="@_isLoading">
                @if (_isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Logger ind...</span>
                }
                else
                {
                    <span>Log ind</span>
                }
            </button>
        </EditForm>

        <div class="auth-links mt-3 text-center">
            <p>Har du ikke en konto? <a href="/register">Opret konto</a></p>
        </div>
    </div>
</div>

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 1rem;
        overflow: hidden;
        background-image: url('/background-images/login-background.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .auth-card {
        background: rgba(255, 255, 255, 0.95);
        padding: 1.5rem;
        border-radius: 1rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 340px;
        backdrop-filter: blur(10px);
    }

    .auth-title {
        text-align: center;
        margin-bottom: 1rem;
        color: #333;
        font-size: 1.5rem;
    }

    .auth-links a {
        color: #667eea;
        text-decoration: none;
    }

    .auth-links a:hover {
        text-decoration: underline;
    }

    .auth-links p {
        margin-bottom: 0;
        font-size: 0.9rem;
    }
</style>

@code {
    private LoginRequest _loginModel = new();
    private string? _errorMessage;
    private bool _isLoading;

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    private async Task HandleLogin()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var result = await AuthService.LoginAsync(_loginModel.Email, _loginModel.Password);

            if (result.Success)
            {
                var returnUrl = string.IsNullOrEmpty(ReturnUrl) ? "/" : ReturnUrl;
                Navigation.NavigateTo(returnUrl);
            }
            else
            {
                _errorMessage = result.ErrorMessage ?? "Login mislykkedes";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"En fejl opstod: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }
}